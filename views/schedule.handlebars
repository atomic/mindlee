<style>
    .alert-info {
        margin: 1em;
        padding: 1em;
        border-radius: 1em;
        font-size: 1.5em;
    }
    .btn-check-stress {
        position: relative;
        /*bottom: 30%;*/
        left: 30%;
        font-size: x-large;
    }
    .schedule-head-title {
        font-size: x-large;
        color: beige;
    }
</style>
<div class="main-content container">

    <div class="row container page-header">
        <label class="col-md-8 schedule-head-title" for="">Your Schedules</label>
        <form class="col-md-1" action="/add" style="float: right">
            <button class="btn btn-success btn-group-lg"><img type="submit" class="plus" src="images/plus.svg" alt=""></button>
        </form>
    </div>

    <div class="schedule_body w3layouts" id="schedule_body">

        {{#with data}}
            {{#ifCond total_activities '>' 0}}
                {{#each activities}}
                    <div class="container activity hvr-glow hvr-sweep-to-left" data-id={{@key}}>
                        <p>Title: {{ title }}</p>
                        <p class="act_date">Date: {{date}}</p>
                        <p class="act_time">Time: {{time}}</p>
                        <p class="stress_level">Stress Level: {{stress_level}}</p>
                        <div class="text-right">
                            <form action="/edit">
                                <input hidden=true type="text" name="id" id="edit_id" value={{@key}}>
                                <button type="submit" class="btn">Edit</button>
                                <button style="margin-left: 3%;" class="btn  btn-danger btn-delete-act">Delete</button>
                            </form>
                            <!--button is hooked to POST request in mindlee.js-->
                        </div>
                    </div>
                {{/each}}
            {{/ifCond}}
            {{#ifCond total_activities '<=' 0}}
                <div class="w3-round-jumbo alert-info">
                    <p class="">
                        You don't have any activities yet. You can add by clicking the <img class="plus" src="images/plus.svg">
                        button.
                    </p>

                </div>
            {{/ifCond}}
        {{/with}}



        <a class="" style="align-content: center;" href="/home">
            <button class="btn btn-group-lg btn-primary btn-check-stress">
                Check your stress level
            </button>
        </a>
    </div>

</div>

<!-- The actual snackbar -->
<div id="snackbar"><a href="/home">Your stress level is a little bit high (click)</a></div>
