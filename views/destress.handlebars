<style>
    #destress_container {
        padding-top: 20%;
    }
    .text-reduce {
        font-weight: bold;
        color: #d21111;
    }

    #new_activity {
        background-color: rgba(100,227,221,0.23);
    }

    #title_1 {
        font-family: "Oxygen";
        color: #ffffff;
        font-size: 130%;
    }

    #title_2{
        font-family: "Oxygen";
        color: #e4e8e9;
        font-size: 100%;
    }

    #title_padding{
        padding-bottom: 5%;
    }

</style>


<div class="schedule_body w3-layout-container" id="destress_container">

    <div id="title_padding" class="destress-title">
        <h2 id="title_1" class="destress-title fadeIn"> Pick an Activity</h2>
        <h2 id="title_2" class="destress-title fadeIn"> Start Your De-stressing Journey</h2>
    </div>


    {{#with data}}
        <div class="stress-level center">
            <div class="container activity hvr-glow">
                <div class="row">
                    <p class="text-reduce">Your Current Stress:  </p>
                    <span>{{total_stress}}</span>
                </div>
            </div>
        </div>
    {{/with}}

    {{#with destress}}
        {{#each default}}
            <div class="activity hvr-glow">
                <div class="row">
                    <p class="col-xs-6 ">{{ message }}</p>
                    <p class="col-xs-1 text-reduce">-{{ stress_reduce }}</p>
                    <div class="text-right col-xs-4">
                        <button class="btn btn-success btn-do">Do</button>
                    </div>
                </div>
            </div>
        {{/each}}
        {{#each custom}}
            <div class="container activity hvr-glow">
                <div class="row">
                    <p class="col-xs-6 d-message">{{ message }}</p>
                    <p class="col-xs-1 text-reduce">-{{ stress_reduce }}</p>
                    <div class="text-right col-xs-2">
                        <button class="btn btn-success">Do</button>
                        <!--button is hooked to POST request in mindlee.js-->
                    </div>
                    <div class="text-right col-xs-2">
                        <button class="btn btn-destress-delete btn-danger">Delete</button>
                        <!--button is hooked to POST request in mindlee.js-->
                    </div>
                </div>
            </div>
        {{/each}}
    {{/with}}
    <a id="new_activity" href="/add_destress" class="container activity center-block text-center text-center hvr-glow">
        Add new de-stress activity</a>
</div>


